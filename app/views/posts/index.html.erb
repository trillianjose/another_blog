<% content_for :page_title, "Index" %>

<section class="section">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="card">
        <div class="card-content">
          <div class="media">
            <div class="media-content">
              <h1 class="title"> <%= link_to post.title, post %> </h1>
            </div>
          </div>
          <div class="content">
            <%= post.content %>
          </div>
          <!-- <div class="comment-count">
            <span class="tag is-rounded"> <% %> </span>
          </div> -->
        </div>
      </div>
    <% end %>
  </div>
</section>
